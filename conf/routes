# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Welcome page
GET     /                                       Welcome.index
GET     /welcome                                Welcome.index
GET     /signup                                 Accounts.signup

#Contact
POST    /acknowledge                            Contact.sendMessage

#Accounts page
GET     /error                                  Accounts.error
GET     /login                                  Accounts.login
GET     /logout                                 Welcome.index

POST    /register                               Accounts.register
POST    /authenticate                           Accounts.authenticate

#InputData
GET     /inputData                              InputData.index
GET     /report                                 Report.index

POST    inputdata/datacapture                   InputData.datacapture

#Report
GET     /generateReport                         Report.generateReport

POST    /generateReport                         Report.generateReport 

#Contact
GET     /contact                                Contact.index
GET     /contacterror                           Contact.contacterror

GET     /feedback                               Contact.feedback


# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
